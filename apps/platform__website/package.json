  "scripts": {
    "dev": "next dev",
    "build": "next build --debug",
    "start": "next start",
    "prettier": "prettier --write \"./**/*.{js,jsx,json}\"",
    "pre-commit": "eslint '*/**/*.{js,jsx}' --fix",
    "prepare": "husky install",
    "clean": "rimraf --no-glob ./tsconfig.tsbuildinfo",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs,.mdx",
    "fix-all-files": "eslint . --ext .ts,.tsx,.js,.jsx,.cjs,.mjs,.mdx --fix",
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "test": "run-s 'test:*'",
    "test:unit": "echo \"No tests yet\"",
    "fix:staged-files": "lint-staged --allow-empty"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "lint-staged": {
    "*.js": "eslint '*/**/*.{js,jsx}' --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "release": {
    "branches": [
      "release"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github"
    ]
  }
}
