{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/lib/*": ["./lib/*"],
      "@/components/*": ["./components/*"],
      "@/pages/*": ["./pages/*"],
      "@/public/*": ["../public/*"],
      "@/themes/*": ["./themes/*"],
      "@devlaunchers/website/*": ["../../../apps/website/src/pages/*"],
      "@devlaunchers/site-projects/*": ["../../../apps/site-projects/src/pages/*"],
      "@devlaunchers/dev-recruiters/*": ["../../../apps/dev-recruiters/src/pages/*"],
      "@devlaunchers/components/*": ["../../../packages/UI/src/*"],
      "@devlaunchers/components": ["../../../packages/UI/src/index"],
      "@devlaunchers/core-lib/*": ["../../../packages/core-lib/src/*"],
      "@devlaunchers/core-lib": ["../../../packages/core-lib/src/index"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/", ".next"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.json"
, ".eslintrc-example.js"  ]
}